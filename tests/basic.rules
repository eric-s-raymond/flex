/* TEST scanner.

   Sample Input:
       # this is a comment
       foo = true
       bar = "string value"
       integer = 43
*/

%option nounput noyywrap noyylineno warn nodefault noinput

IDENT [[:alnum:]_-]
WS    [[:blank:]]
%%

^{IDENT}+{WS}*={WS}*(true|false){WS}*\r?\n    { return M4_TEST_LEX_RV_SUCCESS(100);}
^{IDENT}+{WS}*={WS}*\"[^\"\n\r]*\"{WS}*\r?\n  { return M4_TEST_LEX_RV_SUCCESS(101);}
^{IDENT}+{WS}*={WS}*[[:digit:]]+{WS}*\r?\n    { return M4_TEST_LEX_RV_SUCCESS(102);}
^{WS}*#.*\r?\n     { }
^{WS}*\r?\n        { }
.|\n  {M4_TEST_FAILMESSAGE}

###
# this is a comment
foo = "bar"
num = 43
setting = false

